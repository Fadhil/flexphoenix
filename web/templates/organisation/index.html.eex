
<div class="wrapper wrapper-content animated fadeInRight">
  <div class="row col-md-12">
    <%= for {organisation, index} <- Enum.with_index(@organisations) do %>
      <%= if(rem(index,3) == 0) do %>
        </div>
        <div class="row col-md-12">
      <% end %>

      <div class="col-md-4 col-xs-12">
        <%= render Flexcility.OrganisationView, "org_card.html", %{organisation: organisation, members: "full", conn: @conn} %>
      </div>
    <% end %>
    <//-- new stuff //-->
<div class="col-md-4 col-xs-12">
    <div class="ibox">

          <div class="ibox-title">
              <h6><span class="pull-right">New Org</span></h6>
              <h5>Create New Organisation</h5>
          </div>

          <div class="ibox-content">
            <a href="<%= organisation_path(@conn, :new) %>">
              <div class="row">
                <div class="col-xs-6">
                  <img src="<%= image(nil)%>" class="img-responsive" />
                </div>
                <div class="col-xs-6 text-center">
                  <img alt="Create Organisation" class="img-circle" src="/images/add-circle.png" data-toggle="tooltip" data-placement="top" title="" data-original-title="Create Organisation">

                </div>
              </div>
            </a>
            <div class="row  m-t-sm">
              <a href="<%= organisation_path(@conn, :new) %>">
                <div class="col-xs-6">
                    <div class="font-bold text-center">FACILITIES</div>
                    <h2 class="text-center">-</h2>
                </div>
                <div class="col-xs-6">
                    <div class="font-bold text-center">SITES</div>
