<div class="row">
  <div class="col-md-4 col-xs-12">
    <h2>Show request</h2>
    <ul>

      <li>
        <strong>Title:</strong>
        <%= @request.title %>
      </li>

      <li>
        <strong>Project:</strong>
        <%= project_name(@request.project)%>
      </li>

      <li>
        <strong>Asset:</strong>
        <%= asset_name(@request.asset)%>
      </li>

      <li>
        <strong>Location:</strong>
        <%= @request.location %>
      </li>

      <li>
        <strong>Description:</strong>
        <%= @request.description %>
      </li>

      <%= if @request.worktype do %>
        <li>
          <strong>Worktype:</strong>
          <%= @request.worktype %>
        </li>
      <% end %>

      <%= if @request.instruction do %>
        <li>
          <strong>Instruction:</strong>
          <%= @request.instruction %>
        </li>
      <% end %>

      <%= if @request.type do %>
        <li>
          <strong>Type:</strong>
          <%= @request.type %>
        </li>
      <% end %>

      <%= if @request.type do %>
        <li>
          <strong>Priority:</strong>
          <%= @request.priority %>
        </li>
      <% end %>

      <%= if @request.deadline do %>
        <li>
          <strong>Deadline:</strong>
          <%= @request.deadline%>
        </li>
      <% end %>

      <li>
        <strong>Owner</strong>
        <%= "#{@request.user.first_name} #{@request.user.last_name}"%>
      </li>

    </ul>
    <%= link "Edit", to: request_path(@conn, :edit, @request), class: "btn btn-warning" %>
    <%= link "Back", to: request_path(@conn, :index), class: "btn btn-default" %>
    <p><%= link "Delete", to: request_path(@conn, :delete, @request), method: :delete, data: [confirm: "Are you sure?"], class: "btn btn-danger btn-xs" %>
    </p>

    <hr/>
      <%= case @request.technicians do %>
        <%= [] -> %>
        <%= technicians -> %>
          <h3>Assigned Technicians</h3>
          <%= for technician <- technicians do %>
            <p><strong><%= technician.email %></strong></p>
          <% end %>
      <% end %>

      <%= link "Assign Technicians", to: request_assign_technicians_path(@conn, :assign_technicians, @request.id), class: "btn btn-primary" %>
      <%= link "Create Work Order", to: order_path(@conn, :new, request_id: @request), class: "btn btn-primary" %>
  </div>
  <div class="col-md-8 col-xs-12">
		<div id='message-list' class='row'>
		</div>

		<div class='row form-group'>
			<div class='col-md-12'>
				<input type='text' id='message' class='form-control' placeholder='Message' />
			</div>
		</div>
  </div>
</div>
